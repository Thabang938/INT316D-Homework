<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>addBookServlet</servlet-name>
        <servlet-class>za.ac.tut.web.addBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>findBookServlet</servlet-name>
        <servlet-class>za.ac.tut.web.findBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>findBookNumberServlet</servlet-name>
        <servlet-class>za.ac.tut.web.findBookNumberServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>viewAllBooksServlet</servlet-name>
        <servlet-class>za.ac.tut.web.viewAllBooksServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>removeBookServlet</servlet-name>
        <servlet-class>za.ac.tut.web.removeBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addBookServlet</servlet-name>
        <url-pattern>/addBookServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>findBookServlet</servlet-name>
        <url-pattern>/findBookServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>findBookNumberServlet</servlet-name>
        <url-pattern>/findBookNumberServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewAllBooksServlet</servlet-name>
        <url-pattern>/viewAllBooksServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>removeBookServlet</servlet-name>
        <url-pattern>/removeBookServlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
